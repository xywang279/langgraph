# OpenAI / compatible service API key
OPENAI_API_KEY=sk-xxxx

# When using OpenAI-compatible services (DeepSeek/Groq/self-hosted), set base_url
# OPENAI_BASE_URL=https://api.deepseek.com/v1

# Model name (examples: deepseek-chat / llama-3.1-70b)
LLM_MODEL=gpt-4o-mini

# API auth / rate limiting
# API_AUTH_TOKEN=change_me
# API_RATE_LIMIT_PER_MINUTE=120
# AUTH_SECRET_KEY=please_change_me
# AUTH_USERNAME=admin
# AUTH_PASSWORD=admin123
# AUTH_TOKEN_TTL_SECONDS=43200

# Upload validation (size/type/content)
# UPLOAD_MAX_BYTES=20000000                               # Max bytes, default 20MB
# UPLOAD_ALLOWED_EXTS=.pdf,.txt,.md,.doc,.docx,.png,.jpg,.jpeg,.bmp,.tiff,.csv,.wav,.mp3,.m4a,.flac,.ogg,.aac,.wma,.webm
# UPLOAD_ALLOWED_MIME_PREFIXES=application/pdf,text/,image/,audio/,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
# UPLOAD_BLOCKED_KEYWORDS=virus,hack,malware              # Reject upload when matched; optional
# UPLOAD_ENABLE_VIRUS_SCAN=0                              # Set to 1 when clamd is available
# ENABLE_TABLE_OCR=0                                      # Set to 1 to OCR table grids in scanned PDFs/images (requires OpenCV)
# TABLE_OCR_MAX_CELLS=200                                 # Safety limit for per-cell OCR
# TABLE_OCR_MIN_PIXELS=1200                               # Min line pixels to consider a table
# TABLE_OCR_MIN_LINE_FRAC=0.25                            # Min line coverage fraction for row/col detection
# PDF_TABLE_FALLBACK_STRATEGIES=lines,text                # Fallback pdfplumber strategies when default table detection fails
# AUDIO_TRANSCRIBE_MODEL=whisper-1
# AUDIO_TRANSCRIBE_LANGUAGE=zh
# AUDIO_TRANSCRIBE_PROVIDER=openai                        # openai | fastwhisper
# AUDIO_TRANSCRIBE_API_KEY=                               # Optional override; falls back to OPENAI_API_KEY
# AUDIO_TRANSCRIBE_BASE_URL=                              # For openai: override base_url; for fastwhisper: http://host:port[/transcribe]

# LangGraph checkpoint store
# CHECKPOINT_DB_PATH=./data/checkpoints.sqlite3

# HTTP search service (example: company search gateway or SerpAPI)
# HTTP_SEARCH_BASE_URL=https://serpapi.com
# HTTP_SEARCH_API_KEY=serp_xxx
# HTTP_SEARCH_AUTH_MODE=query   # bearer|query|none
# HTTP_SEARCH_API_KEY_PARAM=api_key
# HTTP_SEARCH_DEFAULT_PARAMS={"engine":"google","google_domain":"google.com"}
# HTTP_SEARCH_MAX_CALLS_PER_MINUTE=12

# Internal business API (example: ITSM/CRM)
# INTERNAL_API_BASE_URL=https://internal-api.example.com/v1
# INTERNAL_API_TOKEN=xxxxx

# Workflow trigger service
# WORKFLOW_API_BASE_URL=https://automation.example.com/api
# WORKFLOW_API_TOKEN=workflow_xxx
# WORKFLOW_TRIGGER_MAX_CALLS_PER_MINUTE=10

# Enable document retrieval (RAG)
# ENABLE_DOCUMENT_RETRIEVAL=true
#TABLE_CONTEXT_MAX_ROWS=100